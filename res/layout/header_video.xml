<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popcorn_header_bck" >

    <ImageButton
        android:id="@+id/popcorn_action_back"
        style="@style/HeaderButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_action_back" />

    <ImageButton
        android:id="@+id/popcorn_action_settings"
        style="@style/SettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/header_button_padding"
        android:layout_marginRight="@dimen/header_button_padding"
        android:src="@drawable/ic_action_settings" />

</RelativeLayout>