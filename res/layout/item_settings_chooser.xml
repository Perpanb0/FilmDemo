<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SettingsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/settings_category_margin"
    android:paddingTop="@dimen/settings_category_margin" >

    <TextView
        android:id="@+id/item_settings_title"
        style="@style/SettingsItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_settings_summary"
        style="@style/SettingsItemSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>